{
  "rules": {
    ".read": false,
    ".write": false,
    
    "users": {
      ".read": true,
      ".write": "(auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin') || (newData.hasChild('createdBy') && root.child('users').child(newData.child('createdBy').val()).child('role').val() == 'admin')",
      "$uid": {
        ".read": true,
        ".write": "auth != null && (auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        "role": {
          ".validate": "newData.isString() && (newData.val() == 'admin' || newData.val() == 'agent' || newData.val() == 'processor')"
        },
        "email": {
          ".validate": "!newData.exists() || newData.isString()"
        },
        "username": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length >= 2 && newData.val().length <= 50)"
        }
      }
    },
    
    "form_fields": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$fieldId": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['fieldName', 'fieldType', 'required', 'order']) && newData.child('fieldType').isString() && newData.child('required').isBoolean() && newData.child('order').isNumber()"
      }
    },
    
    "processor_profiles": {
      ".read": false,
      ".write": false,
      "$userId": {
        ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".validate": "newData.hasChildren(['userId']) && newData.child('userId').val() == $userId"
      }
    },
    
    "sales": {
      ".read": "auth != null && (root.child('users').child(auth.uid).child('role').val() == 'admin' || root.child('users').child(auth.uid).child('role').val() == 'processor' || query.orderByChild == 'agentId' && query.equalTo == auth.uid)",
      ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() == 'admin' || newData.child('agentId').val() == auth.uid)",
      ".indexOn": ["agentId", "submittedAt", "agentEmail", "timestamp", "leadStatus", "disposition", "leadSource"],
      "$saleId": {
        ".read": "auth != null && (data.child('agentId').val() == auth.uid || root.child('users').child(auth.uid).child('role').val() == 'admin' || root.child('users').child(auth.uid).child('role').val() == 'processor')",
        ".validate": "newData.hasChildren(['contact', 'appliances', 'timestamp', 'agentId', 'agentEmail'])",
        "leadStatus": {
          ".validate": "!newData.exists() || (newData.isString() && (newData.val() == 'new' || newData.val() == 'contacted' || newData.val() == 'dispositioned' || newData.val() == 'converted'))"
        },
        "disposition": {
          ".validate": "!newData.exists() || newData.val() == null || (newData.isString() && (newData.val() == 'no_answer' || newData.val() == 'not_interested' || newData.val() == 'interested' || newData.val() == 'call_back' || newData.val() == 'other'))"
        },
        "dispositionDate": {
          ".validate": "!newData.exists() || newData.val() == null || newData.isString()"
        },
        "dispositionBy": {
          ".validate": "!newData.exists() || newData.val() == null || newData.isString()"
        },
        "leadSource": {
          ".validate": "!newData.exists() || newData.val() == null || (newData.isString() && (newData.val() == 'upload' || newData.val() == 'form' || newData.val() == 'manual'))"
        }
      }
    },
    
    "appliances": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["saleId", "type", "createdAt"],
      "$applianceId": {
        ".validate": "newData.hasChildren(['saleId', 'type']) && newData.child('saleId').isString() && newData.child('type').isString()"
      }
    },
    
    "appliance_submissions": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$submissionId": {
        ".validate": "newData.hasChildren(['contact', 'appliances', 'timestamp'])"
      }
    },
    
    "security_logs": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'",
      ".write": true,
      "$logId": {
        ".validate": "newData.hasChildren(['eventType', 'severity', 'timestamp']) && newData.child('eventType').isString() && newData.child('severity').isString() && newData.child('timestamp').isString()"
      }
    }
  }
}
